if(CMAKE_SIZEOF_VOID_P EQUAL 8)
	set(suffix "x64")
elseif (CMAKE_SIZEOF_VOID_P EQUAL 4)
	set(suffix "x86")
endif()

find_library(ASSIMP_LIBRARY
	NAMES assimp-vc141-mt
	PATHS "${CMAKE_CURRENT_LIST_DIR}/lib/${suffix}"
	NO_DEFAULT_PATH
	NO_CMAKE_FIND_ROOT_PATH
)
find_library(IRRXML_LIBRARY
	NAMES IrrXML
	PATHS "${CMAKE_CURRENT_LIST_DIR}/lib/${suffix}"
	NO_DEFAULT_PATH
	NO_CMAKE_FIND_ROOT_PATH
)
find_library(ZLIB_LIBRARY
	NAMES zlibstatic
	PATHS "${CMAKE_CURRENT_LIST_DIR}/lib/${suffix}"
	NO_DEFAULT_PATH
	NO_CMAKE_FIND_ROOT_PATH
)
find_path(ASSIMP_INCLUDE_DIR
	NAMES assimp
	PATHS "${CMAKE_CURRENT_LIST_DIR}/include"
	PATH_SUFFIXES assimp
    NO_DEFAULT_PATH
    NO_CMAKE_FIND_ROOT_PATH
)
	
set(ASSIMP_INCLUDE_DIRS ${ASSIMP_INCLUDE_DIR})
set(ASSIMP_LIBRARIES
	${ASSIMP_LIBRARY}
	${IRRXML_LIBRARY}
	${ZLIB_LIBRARY})
	
mark_as_advanced(ASSIMP_LIBRARY IRRXML_LIBRARY ZLIB_LIBRARY ASSIMP_INCLUDE_DIR)

if(NOT TARGET ASSIMP AND CMAKE_VERSION VERSION_GREATER 3.0.0)
    add_library(ASSIMP INTERFACE)
    target_link_libraries(ASSIMP INTERFACE ${ASSIMP_LIBRARIES})
    target_include_directories(ASSIMP INTERFACE ${ASSIMP_INCLUDE_DIRS})
endif()
